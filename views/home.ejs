<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>
   <title>Home Page</title>
</head>

<body>
   <%- include('./partials/nav') %>
      <div class="container mt-3 row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
         <% blogs.forEach(blog=> { %>
            <div class="col mb-4">
               <div class="card h-100">
                  <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                  <div class="card-body">
                     <h5 class="card-title">
                        <%= blog.title %>
                     </h5>
                     <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                  </div>
               </div>
            </div>
            <% }) %>
      </div>
      <%- include('./partials/scripts') %>
</body>

</html>